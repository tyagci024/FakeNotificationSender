<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_notification_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Notification Title"/>
    <EditText
        android:id="@+id/et_notification_app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="AppTitle (whatsapp, twitter, instagram, sms)"/>


    <EditText
        android:id="@+id/et_notification_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Notification Text"/>

    <Button
        android:id="@+id/btn_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Time" />

    <Button
        android:id="@+id/btn_set_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Set Alarm" />

</LinearLayout>
